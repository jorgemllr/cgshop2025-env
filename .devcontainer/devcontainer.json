{
  "name": "CGSHOP2025 Dev Container",
  "image": "mcr.microsoft.com/vscode/devcontainers/cpp:ubuntu-22.04",
  "features": {
    "ghcr.io/devcontainers/features/cmake:1": {
      "version": "3.26.4"
    },
    "ghcr.io/devcontainers/features/python:1": {
      "version": "3.12"
    },
    "ghcr.io/devcontainers/features/conan:1": {}
  },
  "postCreateCommand": "pip install --upgrade pip && pip install -e .",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-vscode.cpptools"
      ]
    }
  }
}
